<?xml version="1.0" encoding="UTF-8"?>
<form class="wpfdparams" method="POST"
      action="admin.php?page=wpfd-config&amp;theme=ucftable&amp;task=config.savethemeparams">
    <input
            name="ucftable_styling"
            type="switcher"
            label="Stylize ucftable"
            value="1"
            class="inline ju-input"
            namespace="Joomunited\WP_File_Download\Admin\Fields\"
    >
        <option value="1">Yes</option>
        <option value="0">No</option>
    </input>
    <input
            name="ucftable_stylingmenu"
            type="switcher"
            label="Stylize menu"
            value="1"
            class="inline ju-input"
            namespace="Joomunited\WP_File_Download\Admin\Fields\"
    >
        <option value="1">Yes</option>
        <option value="0">No</option>
    </input>

    <input
            name="ucftable_showsize"
            type="switcher"
            label="Show weight"
